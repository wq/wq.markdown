        "react-syntax-highlighter": "^15.4.3",
        "remark-gfm": "^1.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/eslint-parser": "^7.12.1",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-transform-react-jsx": "^7.12.10",
        "@babel/preset-env": "^7.12.10",
