        "precise-commits": "^1.0.2",
        "prettier": "^2.2.1",
        "rollup": "^2.35.1",
        "rollup-plugin-analyzer": "^3.3.0",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "rollup-plugin-terser": "^7.0.2"
